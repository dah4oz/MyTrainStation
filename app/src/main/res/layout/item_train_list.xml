<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

    <LinearLayout
            android:id="@+id/train_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">
    <TextView
            android:id="@+id/train_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    <TextView
            android:id="@+id/train_origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="1dp"
            android:textColor="@android:color/black" />
    <TextView
            android:id="@+id/train_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="1dp"
            android:textColor="@android:color/black" />

    <TextView
            android:id="@+id/train_exp_arrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="1dp"
            android:textColor="@android:color/black" />

        <TextView android:id="@+id/train_exp_dep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="1dp"
                android:textColor="@android:color/black" />

        <TextView
                android:id="@+id/train_sch_arrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="1dp"
                android:textColor="@android:color/black" />

        <TextView
                android:id="@+id/train_sch_dep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="1dp"
                android:textColor="@android:color/black" />

        <TextView
                android:id="@+id/train_direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="1dp"
                android:textColor="@android:color/black" />

    </LinearLayout>

</android.support.v7.widget.CardView>